<div class="modal fade" id="staticBackdrop<%= candidate.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_tag position_candidate_assign_assessment_to_candidate_path(candidate.position, candidate), method: :post do %>
          <div class="field">
            <%= label_tag "assessment_id", "Choose a Test" %>
            <%= select_tag "assessment_id", options_from_collection_for_select(Assessment.all, "id", "title") %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= submit_tag "Assign", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
