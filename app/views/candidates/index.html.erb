<div class="display-3 text-center mt-4 ">Candidates</div>
<div class=" position-cards d-flex justify-content-center flex-wrap px-5">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Picture</th>
        <th scope="col">Name</th>
        <th scope="col">Date of Birth</th>
        <th scope="col">Email</th>
        <th scope="col">Experience</th>
        <th scope="col">Assessment</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%@candidates.each do |candidate|%>
        <tr>
          <td>
            <%= image_tag candidate.profile_picture, class: 'table' if candidate.profile_picture.attached? %>
          </td>
          <td><%=candidate.name%></td>
          <td><%=candidate.dob%></td>
          <td><%=candidate.email%></td>
          <td><%=candidate.industry_experience%></td>
          <td>
            <%= candidate.assessment&.title%>
          </td>
          <td class="dropdown">
            <button class="dropdown-toggle dots-btn" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa-solid fa-ellipsis-vertical"></i>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to "Edit", edit_position_candidate_path(@position, candidate), class: "dropdown-item" %>
              <%= link_to "Delete", position_candidate_path(@position, candidate), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: "dropdown-item" %>
              <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#staticBackdrop<%= candidate.id %>">
                Assign
              </button>
            </div>
          </td>
        </tr>
        <%= render "modal", candidate: candidate %>
      <%end%>
    </tbody>
  </table>
</div>
<div class="d-flex justify-content-center mt-3">
  <%= link_to "Add Candidate", new_position_candidate_path, class: "btn btn-secondary" %>
</div>
