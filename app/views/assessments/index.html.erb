<div class="display-3 text-center mt-4 ">Assessments</div>
<div class="container position-cards d-flex justify-content-center flex-wrap">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Test File</th>
      </tr>
    </thead>
    <tbody>
      <%@assessments.each do |assessment|%>
        <tr>
          <td><%=assessment.title%></td>
          <td>
            <% if assessment.test.attached? %>
              <%= assessment.test.filename %>
            <% else %>
              <p>No file uploaded</p>
            <% end %>
          </div>
        </td>
        <td class="dropdown">
          <button class="dropdown-toggle custom-dropdown-button dots-btn" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa-solid fa-ellipsis-vertical"></i>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to "Edit", edit_assessment_path(assessment.id), class: "dropdown-item" %>
            <%= link_to "Delete", assessment_path(assessment.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: "dropdown-item" %>
          </div>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
</div>
<div class="d-flex justify-content-center mt-3">
  <%= link_to "Create New Assessment", new_assessment_path, class: "btn btn-secondary"%>
</div>
